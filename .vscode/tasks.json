{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
    },
    "tasks": [
        {
            "label": "run",
            "type": "shell",
            "command": "zig build run",
            "group": {
                "kind": "build",
                "isDefault": false,
            },
        },

        {
            "label": "build",
            "type": "shell",
            "command": "zig build",
            "group": {
                "kind": "build",
                "isDefault": false,
            }
        },

        {
            "label": "lib",
            "type": "shell",
            "command": "zig build lib",
            "group": {
                "kind": "build",
                "isDefault": true,
            }
        }
    ]
}